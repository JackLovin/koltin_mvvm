<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/x_dp_20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
       >
        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_dp_10"
            android:text="标题"
            android:textColor="#1285DD"
            android:textSize="@dimen/sp18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x_dp_15"
            android:layout_marginTop="@dimen/x_dp_10"
            android:layout_marginEnd="@dimen/x_dp_15"
            android:maxLines="2"
            android:singleLine="true"
            android:text="您确定要退出程序吗？"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_dp_10"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x_dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog_content">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x_dp_1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_dialog_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/x_dp_30"
                android:layout_marginTop="@dimen/x_dp_10"
                android:layout_weight="2"
                android:background="@drawable/btn_background"
                android:text="确定"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x_dp_1"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/x_dp_30"
                android:layout_marginTop="@dimen/x_dp_10"
                android:layout_weight="2"
                android:background="@drawable/btn_cancel_background"
                android:text="取消"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_content" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x_dp_1"
                android:layout_weight="1" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>